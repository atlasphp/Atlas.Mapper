{
    "name": "atlas/mapper",
    "type": "library",
    "description": "A data mapper for the persistence model.",
    "keywords": [ "sql", "data", "mapper", "mapping", "orm" ],
    "homepage": "http://github.com/atlasphp/Atlas.Mapper",
    "license": "MIT",
    "authors": [
        {
            "name": "Atlas Contributors",
            "homepage": "https://github.com/atlasphp/Atlas.Mapper/contributors"
        }
    ],
    "require": {
        "php": "^8.0",
        "atlas/table": "2.x-dev"
    },
    "autoload": {
        "psr-4": {
            "Atlas\\Mapper\\": "src/"
        }
    },
    "require-dev": {
        "pds/skeleton": "^1.0",
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Atlas\\Mapper\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "stan": "./vendor/bin/phpstan analyze -c phpstan.neon --memory-limit=1G src",
        "testan": "composer test && composer stan"
    },
    "suggest": {
        "atlas/skeleton": "A command-line tool to build skeleton classes."
    }
}
